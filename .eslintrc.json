{
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["import", "n", "promise"],
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "error",
    "quotes": ["error", "single"], // 修改為 single
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"]
  }
}
